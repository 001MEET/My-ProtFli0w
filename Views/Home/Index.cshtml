<script>
    function toggleDarkMode() {
        const body = document.body;
        const icon = document.querySelector('.bi');
        body.classList.toggle("light-mode");
        if (body.classList.contains("light-mode")) {
            icon.classList.remove("bi-moon-stars-fill");
            icon.classList.add("bi-brightness-high-fill");
        } else {
            icon.classList.remove("bi-brightness-high-fill");
            icon.classList.add("bi-moon-stars-fill");
        }
    }

    function showPortfolio() {
        document.getElementById('portfolioContent').style.display = 'block';
        document.querySelector('.hero').style.display = 'none';
        window.scrollTo(0, 0); // optional: scroll to top
    }

    function backToHero() {
        document.getElementById('portfolioContent').style.display = 'none';
        document.querySelector('.hero').style.display = 'block';
        window.scrollTo(0, 0); // optional: scroll to top
    }
          function confirmDownload() {
        const modal = new bootstrap.Modal(document.getElementById('resumeConfirmModal'));
        modal.show();
    }

    
    window.addEventListener('load', function () {
        const welcomeModalEl = document.getElementById('welcomeModal');
        const welcomeModal = new bootstrap.Modal(welcomeModalEl);
        welcomeModal.show();

        // Blur background
        document.body.classList.add("modal-blur-active");

        // Remove blur when modal closes
        welcomeModalEl.addEventListener('hidden.bs.modal', () => {
            document.body.classList.remove("modal-blur-active");
        });

        // Auto-close modal after 8 seconds
        setTimeout(() => {
            welcomeModal.hide();
        }, 5000);
    });
</script>

